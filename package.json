{
  "name": "wp-console",
  "version": "1.0.0",
  "description": "WordPress PHP Console powered by PsySH",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --progress --colors --watch",
    "build": "cross-env NODE_ENV=production webpack --progress --colors && npm run make-pot && npm run zip",
    "zip": "bash +x build/build.sh",
    "make-pot": "wp i18n make-pot ./ languages/wp-console.pot --exclude=build",
    "lint-js:fix": "eslint src/wp-console/**/*.js --fix",
    "lint-css:fix": "stylelint --config=.stylelintrc.json src/wp-console/scss/**/*.scss --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ediamin/wp-console.git"
  },
  "keywords": [
    "wordpress",
    "console",
    "browser",
    "psysh",
    "shell",
    "dump"
  ],
  "author": "Edi Amin <to.ediamin@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ediamin/wp-console/issues"
  },
  "homepage": "https://github.com/ediamin/wp-console",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^1.0.1",
    "@wordpress/eslint-plugin": "^2.2.0",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.3.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-jest": "^22.6.4",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "stylelint": "^10.1.0",
    "stylelint-config-wordpress": "^14.0.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3"
  }
}
