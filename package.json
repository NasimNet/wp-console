{
  "name": "wp-console",
  "version": "1.3.0",
  "description": "WordPress PHP Console powered by PsySH",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack --progress --colors --watch",
    "build": "cross-env NODE_ENV=production webpack --progress --colors",
    "zip": "node build",
    "make-pot": "wp i18n make-pot ./ languages/wp-console.pot --exclude=build",
    "release": "npm run make-pot && npm run build && node build",
    "lint-js:fix": "eslint src/wp-console/**/*.js --fix",
    "lint-css:fix": "stylelint --config=.stylelintrc.json src/wp-console/scss/**/*.scss --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ediamin/wp-console.git"
  },
  "keywords": [
    "wordpress",
    "console",
    "browser",
    "psysh",
    "shell",
    "dump"
  ],
  "author": "Edi Amin <to.ediamin@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ediamin/wp-console/issues"
  },
  "homepage": "https://github.com/ediamin/wp-console",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@wordpress/dependency-extraction-webpack-plugin": "^2.0.0",
    "@wordpress/eslint-plugin": "^3.1.0",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.3.1",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-jest": "^22.21.0",
    "mini-css-extract-plugin": "^0.8.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.0",
    "shelljs": "^0.8.3",
    "stylelint": "^11.1.1",
    "stylelint-config-wordpress": "^15.0.0",
    "stylelint-webpack-plugin": "^1.0.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
